<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php
    $filterUrls = Mage::helper('mana_filters/url');
?>
<?php if($this->getCollection()->getSize()): ?>

    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>

    <?php if($this->getLastPageNum()>1): ?>
    <div class="pages">
        <ol>

        <?php if ($this->canShowFirst()): ?>
            <li><a class="first" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getFirstPageUrl()); ?>');return false;">|<</a></li>
        <?php endif;?>

        <?php if (!$this->isFirstPage()): ?>
            <li>
                <a class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getPreviousPageUrl()); ?>');return false;" title="<?php echo $this->__('Previous') ?>">
                    <?php if(!$this->getAnchorTextForPrevious()): ?>
                        <<
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForPrevious() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>

        <?php if ($this->canShowFirst()): ?>
            <li><a class="first" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getFirstPageUrl()); ?>');return false;">1</a></li>
        <?php endif;?>

        <?php if ($this->canShowPreviousJump()): ?>
            <li><a class="previous_jump" title="" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getPreviousJumpUrl()); ?>');return false;">...</a></li>
        <?php endif;?>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <li class="current"><?php echo $_page ?></li>
            <?php else: ?>
                <li><a href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getPageUrl($_page)); ?>');return false;"><?php echo $_page ?></a></li>
            <?php endif;?>
        <?php endforeach;?>


        <?php if ($this->canShowNextJump()): ?>
            <li><a class="next_jump" title="" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getNextJumpUrl()); ?>');return false;">...</a></li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li><a class="last" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getLastPageUrl()); ?>');return false;"><?php echo $this->getLastPageNum() ?></a></li>
        <?php endif;?>

        <?php if (!$this->isLastPage()): ?>
            <li>
                <a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getNextPageUrl()); ?>');return false;" title="<?php echo $this->__('Next') ?>">
                    <?php if(!$this->getAnchorTextForNext()): ?>
                        >>
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForNext() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li><a class="last" href="#" onclick="filterItems('<?php echo $filterUrls->getFilterUrl($this->getLastPageUrl()); ?>');return false;">>|</a></li>
        <?php endif;?>
        </ol>

    </div>
    <?php endif; ?>

    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
