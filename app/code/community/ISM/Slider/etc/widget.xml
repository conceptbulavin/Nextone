<?xml version="1.0" encoding="UTF-8"?>
<widgets>
    <slider type="slider/slider" translate="ISM Slider">
        <name>ISM Slider</name>

        <description>Allows you put sliders on the site</description>

        <parameters>
            <slider_id translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Slider</label>
                <type>label</type>
                <helper_block>
                    <type>slider/adminhtml_slider_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select slider...</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>20</sort_order>
            </slider_id>
        </parameters>
    </slider>
</widgets>